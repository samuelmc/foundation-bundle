{% block extends %}
    {{ "{% extends '@"~bundle|slice(0, -6)~"/Shared/page.html.twig' %}" }}
{% endblock extends %}

{% block body %}
{{ "{% block content %}" }}

    <h1>Delete {{ entity }}</h1>

    <p>Are you sure you want to delete this {{ entity_singularized }}?</p>

    {{ '{{ form_start(form) }}' }}

        {{ '{{ form_widget(form) }}' }}

        <button type="submit" class="button">
            <i class="fa fa-trash"></i>
            Delete
        </button>
        <a class="button" href="{{ "{{ app.request.headers.get('referer') }}" }}">
            <i class="fa fa-times"></i>
            Cancel
        </a>
    {{ '{{ form_end(form) }}' }}

{{ "{% endblock %}" }}
{% endblock body %}
